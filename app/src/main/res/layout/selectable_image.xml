<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical|center_horizontal">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/image_picker_add"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:background="@drawable/background_view_dash"
            android:gravity="center"
            android:clickable="true"
            android:src="@mipmap/image_picker_add" />

        <!--
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="10dip"
                android:id="@+id/ImagePicker_ImageView"
                android:layout_gravity="center"
                android:src="@mipmap/image_picker_add"
                android:scaleType="fitXY"/>
        -->

        <ImageView
            android:id="@+id/image_picker_delete"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_gravity="right|top"
            android:src="@mipmap/image_picker_delete" />

    </FrameLayout>
</RelativeLayout>
